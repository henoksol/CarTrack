<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:gravity="center" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/carlocation_recycler_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:listitem="@layout/carlocation_list_item" />
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="92dp"
            android:layout_height="wrap_content"

            android:src="@android:drawable/ic_dialog_map" android:layout_alignParentEnd="true"
            android:layout_marginEnd="68dp" android:layout_alignParentBottom="true" android:layout_marginBottom="32dp"
            app:backgroundTint="?android:attr/colorAccent"/>

</RelativeLayout>